<html>

	<head class="mui-appbar">

		<link href="//cdn.muicss.com/mui-0.4.7/css/mui.min.css" rel="stylesheet" type="text/css" />
		<script src="//cdn.muicss.com/mui-0.4.7/js/mui.min.js"></script>

	</head>

	<header class="mui-appbar mui-container">

		<h1>Restaurants</h1>

	</header>

	<body>

		<div class="mui-container">

			<img src=<%= @mapUrl %>>

			<% @restaurants.each do |r| %>

				<section>

					<%= button_to (r.name), restaurant_path(r), {method: 'get', class: 'mui-btn mui-btn--primary'} %>

				</section>

			<% end %>

			<br>

			<%= button_to ("New Restaurant"), new_restaurant_path(), {method: 'get', class: 'mui-btn mui-btn--primary'} %>

		</div>

	</body>

</html>